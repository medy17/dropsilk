{
  "name": "dropsilk",
  "version": "3.0.4",
  "author": "Ahmed medy17 <> (ahmed@dropsilk.xyz) (https://github.com/medy17)",
  "description": "A modern, privacy-focused, peer-to-peer file transfer application built with WebRTC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medy17/dropsilk.git"
  },
  "main": "electron/main.js",
  "scripts": {
    "gen:version": "node scripts/generate-version.js",
    "gen:locales": "node scripts/generate-locales.js",
    "dev": "pnpm gen:version && pnpm gen:locales && pnpm update-themes && vite --host",
    "build:web": "pnpm gen:version && pnpm gen:locales && pnpm update-themes && vite build",
    "dev:electron": "concurrently \"pnpm:dev\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:electron": "pnpm gen:version && pnpm gen:locales && pnpm update-themes && cross-env VITE_API_BASE_URL=https://dropsilk-backend.onrender.com vite build --base=./ && electron-builder",
    "preview": "vite preview",
    "update-locales": "node scripts/update-locales.js",
    "update-themes": "node scripts/update-themes.js",
    "test": "pnpm gen:locales && pnpm update-themes && vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "pnpm gen:locales && pnpm update-themes && vitest run"
  },
  "build": {
    "appId": "com.dropsilk.app",
    "productName": "DropSilk",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicons/favicon-512x512.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicons/favicon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicons"
    }
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "ag-psd": "^28.5.0",
    "dompurify": "^3.3.0",
    "electron-squirrel-startup": "^1.0.1",
    "heic2any": "^0.0.4",
    "highlight.js": "^11.11.1",
    "i18next": "^25.6.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.11.0",
    "marked": "^17.0.0",
    "pdfjs-dist": "^5.4.394",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.4",
    "sortablejs": "^1.15.6",
    "uploadthing": "^7.7.4",
    "wavesurfer.js": "^7.11.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.2.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  }
}